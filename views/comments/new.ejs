<%- include('../partials/header'); -%> 

<h4 style="text-align: center; margin-top: 50px;">ADD NEW COMMENT ON <%= product.name.substring(0,18) + '...' %> </h4>

<div class="container">

    <div style="width: 30%; margin: 30px auto;">
        <form action="/HomePage/<%= product._id %>/comments" method="POST">
            <div class="form-group">
                <input type="text" name="comment[text]" placeholder="Add new comment" class="form-control">
            </div>
            
            <div class="form-group">
                <input type="text" name="comment[author]" placeholder="author" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        
        <a href="/campgrounds/<%= product._id %>">Go back!</a>
    </div>
</div>




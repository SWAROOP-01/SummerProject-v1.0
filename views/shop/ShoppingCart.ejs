      <div class="container">
          <p></p>
  
          
          <!-- MAIN HEADING -->
          <div class="row banner">
              <div class="col md-4">
                  <strong><h3 style="color:grey;">AZCART ( <%= session.cart.totalQty %>  : items)</h3></strong>
              </div>
          </div>
          
          <!-- GRID SYSTEM -->
          <div class="row">
              <!-- shopping items and price GRID-->
              <div class="col-md-8">
                  <% products.forEach(function(product){ %>
                      <div class="row" >
                          <div class="col-md-3">
                              <img class="img-thumbail border rounded img-fluid smallImage" src="<%= product.item.image %>" alt="">
                          </div>
                          <div class="col-md-6">
                                  <div>
                                    <h5><%= product.item.name %> </h5>
                                    <p class="mb-3 text-muted text-uppercase small">category - <%= product.item.category %> </p>
                                  </div>
                          </div>
                          <div class="col-md-3">
                              <div class="INPUT">
                                  <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
                                    class="minus"><i class="fas fa-plus"></i></button>
                                  <input class="Qty" min="0" name="quantity" value="<%= product.qty %>" type="number">
                                  <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                    class="plus"><i class="fas fa-minus"></i></button>
                              </div>
                          </div>
          
                      </div>
                      <!-- ITEM COST ROW -->
                      <div class="row">
                          <div class="col-md-3"></div>
                          <div class="col-md-6"></div>
                          <div class="col-md-3">
                              <div class="PRICE">
                                  <h6><i class="fas fa-rupee-sign"></i><%= product.price %></h6>
                              </div> 
                          </div>
                      </div>
          
          
                      <hr class="style-two">
                  <% }); %> 
              </div>
  
              <!-- CHECKOUT GRID -->
              <div class="col-md-4">
  
                  <div class="card mb-3">
                      <div class="card-body">
              
                        <h5 class="mb-3">The total amount of</h5>
              
                        <ul class="list-group list-group-flush">
                          <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            Temporary amount
                            <span><h6><i class="fas fa-rupee-sign"></i><%= totalPrice %></span>
                          </li>
                          
                          <hr class="style-two">
                          
                          <!-- <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            Shipping
                            <span><input type="text" placeholder="shipping adress"></span>
                          </li> -->
                          <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                              <strong>The total amount of</strong>
                              <strong>
                                <p class="mb-0">(including IGST and CGST)</p>
                                <p class="lead" style="font-size: .8em;">18%</p>
                              </strong>
                            </div>
                            <span><strong><h6><i class="fas fa-rupee-sign"></i><%= totalPrice + totalPrice*18/100 %> </strong></span>
                          </li>
                        </ul>
              
                        <a type="button" href="/checkout" class="btn btn-primary btn-block waves-effect waves-light">go to checkout</a>
              
                      </div>
                    </div>
                    <!-- Card -->
              
